\RequirePackage{minted}
\newcommand{\ipynbsource}[2]{
    \inputminted[
        breaklines,
        frame=single,
        framesep=4mm,
        breakanywhere=false,
        fontsize=\footnotesize,
        bgcolor=white,  % keeps the boxes from splitting across pages
    ]{python}{.cells/#1/#2.source}
}
\newcommand{\ipynboutput}[2]{
    \inputminted[
        breaklines,
        frame=single,
        framesep=4mm,
        breakanywhere=false,
        fontsize=\footnotesize,
        bgcolor=white,  % keeps the boxes from splitting across pages
    ]{python}{.cells/#1/#2.output}
}
\newcommand{\ipynb}[2]{
    \ipynbsource{#1}{#2}
    \ipynboutput{#1}{#2}
}
\newcommand{\ipynbinclude}{
    Include
}